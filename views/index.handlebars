<main class="container-fluid">
  <div class="row">
    <div class="col-3"></div>

    <div class="col-5 text-center">
    
      <h1>Burgers, Burgers, Burgers!</h1>

      <h2>Let's eat</h2>

      <ul class="list-unstyled">
        {{#each burgers}}
          {{#unless devoured}}
            {{> burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>

      <h2>Burgers waiting to be devoured</h2>

      <ul class="list-unstyled">
        {{#each burgers}}
          {{#if devoured}}
            {{> burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>

      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="bgr">Burger Name:</label>
          <input type="text" id="bgr" name="burger_name">
        </div>

        <div class="form-group">
          <label for="devoured">devoured?</label><br>
          <input type="radio" name="devoured" value="1" checked> Devoured!<br>
          <input type="radio" name="devoured" value="0"> piping hot
        </div>

        <button class="btn-success shadow rounded" type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</main>